<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datos de Empresa"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_name"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre de Empresa"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_ruc"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_ruc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="RUC"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_phone"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Telefono"
                                android:inputType="phone"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_address"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Direccion"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_latitude"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_latitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Latitud"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_longitude"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_longitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Longitud"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datos de Propietario"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_nombre"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_nombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_dni"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_dni"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="DNI"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_correo"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_correo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Correo"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_celular"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_celular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Celular"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_direccion"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_direccion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Direccion"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_company_id"
                            style="@style/CantidadTextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ti_company_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ID Empresa"
                                android:inputType="text"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorPrimary"/>
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>